{
  "extends": ["react-app"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "extends": ["react-app"],
        "plugins": ["prettier"],
        "rules": {
          "prettier/prettier": [
            "error",
            {
              "trailingComma": "none",
              "tabWidth": 2,
              "printWidth": 120,
              "singleQuote": true,
              "semi": false,
              "arrowParens": "avoid",
              "bracketSpacing": true,
              "jsxSingleQuote": true
            }
          ]
        }
      }
      
    ]
  }
}
